{
  "proseWrap": "always",
  "semi": false,
  "singleQuote": true,
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["content/**/*.@(md|mdx)"],
      "options": {
        "proseWrap": "never",
        "singleQuote": false
      }
    },
    {
      "files": ["content/**/*.yml"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
